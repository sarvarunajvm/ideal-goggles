{
  "name": "ideal-googles",
  "version": "1.0.9",
  "description": "Photo search and navigation desktop application",
  "author": "Photo Search Team",
  "main": "electron/dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" \"pnpm run dev:electron\"",
    "dev:backend": "cd backend && python3 -m src.main",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development wait-on http://localhost:3333 tcp:127.0.0.1:5555 && pnpm run build:electron:main && cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:frontend && pnpm run build:electron:main",
    "build:frontend": "cd frontend && vite build",
    "build:electron:main": "tsc -p electron/tsconfig.json",
    "build:electron": "pnpm run build:frontend && pnpm run build:electron:main && electron-builder",
    "preview": "vite preview --config frontend/vite.config.ts",
    "lint": "pnpm --filter frontend run lint",
    "lint:fix": "pnpm --filter frontend run lint:fix",
    "lint:frontend": "eslint -c frontend/.eslintrc.json --cwd frontend . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:frontend:fix": "eslint -c frontend/.eslintrc.json --cwd frontend . --ext ts,tsx --fix",
    "lint:electron": "eslint electron --ext ts --max-warnings 0 || true",
    "type-check": "tsc --noEmit -p frontend/tsconfig.json",
    "test": "jest -c frontend/jest.config.js",
    "test:unit": "jest -c frontend/jest.config.js frontend/tests/basic.test.js",
    "test:components": "jest -c frontend/jest.config.js --testPathPattern=frontend/tests/components/.*",
    "bundle-backend": "make backend-package",
    "dist:mac": "make dist-mac",
    "dist:win": "make dist-win",
    "dist:all": "make dist-all"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "33.3.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.11.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.5",
    "terser": "^5.44.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2",
    "vite": "^6.3.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.idealgoogles.app",
    "productName": "ideal-googles",
    "copyright": "Copyright Â© 2023 Photo Search Team",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build-resources"
    },
    "files": [
      "frontend/dist/**/*",
      "electron/dist/**/*",
      "!frontend/src/**/*",
      "!backend/**/*",
      "!*.ts",
      "!*.tsx"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Photo Search Team",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "signingHashAlgorithms": [],
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.photography",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "identity": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Graphics",
      "executableName": "ideal-googles",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ideal-googles",
      "uninstallDisplayName": "ideal-googles"
    },
    "dmg": {
      "title": "ideal-googles",
      "iconSize": 100,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "packageCategory": "graphics",
      "synopsis": "Local photo search and navigation application",
      "description": "AI-powered photo search with text, semantic, and face recognition capabilities. Privacy-focused local processing.",
      "maintainer": "Photo Search Team"
    },
    "publish": null
  },
  "packageManager": "pnpm@10.14.0"
}
