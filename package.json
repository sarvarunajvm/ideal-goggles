{
  "name": "ideal-goggles",
  "version": "1.0.16",
  "description": "Ideal Goggles desktop application",
  "author": "Ideal Goggles Team",
  "main": "frontend/electron/dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" \"pnpm run dev:electron\"",
    "dev:all": "pnpm run dev",
    "dev:backend": "make -C backend dev",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development wait-on http://localhost:3333 tcp:127.0.0.1:5555 && pnpm run build:electron:main && cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:frontend && pnpm run build:electron:main",
    "build:all": "pnpm run backend:package && pnpm run build:frontend && pnpm run build:electron:main",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "build:electron:main": "tsc -p frontend/electron/tsconfig.json",
    "build:electron": "pnpm run build:frontend && pnpm run build:electron:main && electron-builder",
    "preview": "vite preview --config frontend/vite.config.ts",
    "lint": "pnpm run lint:frontend && pnpm run backend:lint",
    "lint:frontend": "eslint -c frontend/eslint.config.mjs frontend",
    "lint:backend": "pnpm run backend:lint",
    "lint:fix": "pnpm run format:frontend && pnpm run backend:format",
    "format:frontend": "eslint -c frontend/eslint.config.mjs --fix frontend",
    "format:backend": "pnpm run backend:format",
    "format:all": "pnpm run format:frontend && pnpm run backend:format",
    "type-check": "pnpm run typecheck:frontend",
    "typecheck:frontend": "tsc --noEmit -p frontend/tsconfig.json",
    "typecheck:backend": "pnpm run backend:typecheck",
    "typecheck:all": "pnpm run typecheck:frontend && pnpm run typecheck:backend",
    "test": "jest -c frontend/jest.config.js --rootDir frontend",
    "test:all": "pnpm run test && pnpm run backend:test",
    "test:coverage": "jest -c frontend/jest.config.js --rootDir frontend --coverage --coverageReporters=json --coverageReporters=lcov --coverageReporters=html --coverageReporters=text --reporters=default --reporters=jest-junit",
    "coverage:all": "pnpm run test:coverage && pnpm run backend:coverage",
    "test:unit": "jest -c frontend/jest.config.js --rootDir frontend frontend/tests/basic.test.js",
    "test:components": "jest -c frontend/jest.config.js --rootDir frontend --testPathPattern=tests/components/.*",
    "test:p0:quick": "jest -c frontend/jest.config.p0.js --rootDir frontend --silent",
    "backend:install": "make -C backend install",
    "backend:package": "make -C backend package",
    "backend:test": "make -C backend test",
    "backend:coverage": "make -C backend coverage",
    "backend:lint": "make -C backend lint",
    "backend:typecheck": "make -C backend typecheck",
    "backend:format": "make -C backend format",
    "backend:check-ml": "make -C backend check-ml",
    
    "dist:mac": "pnpm run backend:package && pnpm run build:frontend && pnpm run build:electron:main && electron-builder --mac",
    "dist:win": "pnpm run backend:package && pnpm run build:frontend && pnpm run build:electron:main && electron-builder --win",
    "dist:all": "pnpm run backend:package && pnpm run build:frontend && pnpm run build:electron:main && electron-builder -mwl",
    "install:all": "pnpm install && pnpm run backend:install",
    "ci:all": "pnpm run lint && pnpm run typecheck:all && pnpm run test:all && pnpm run build:all",
    "version:update": "node scripts/update-version.js",
    "version:sync": "node scripts/update-version.js && git add -A && git commit -m 'chore: sync versions' || true",
    "tag": "node scripts/create-tag.js",
    "tag:patch": "node scripts/create-tag.js patch",
    "tag:minor": "node scripts/create-tag.js minor",
    "tag:major": "node scripts/create-tag.js major",
    "release": "node scripts/create-tag.js",
    "release:push": "git push origin main && git push origin --tags",
    "hooks:setup": "bash scripts/setup-hooks.sh",
    "postinstall": "bash scripts/setup-hooks.sh || true",
    "e2e:install": "cd func_tests && pnpm install",
    "e2e:browsers": "cd func_tests && npx playwright install",
    "e2e:dev": "USE_EXISTING_SERVER=1 cd func_tests && npx playwright test",
    "e2e:ci": "cd func_tests && npx playwright test --config=playwright.config.ci.ts",
    "e2e:report": "cd func_tests && npx playwright show-report",
    "e2e:smoke": "cd func_tests && npx playwright test 01-smoke",
    "e2e:headed": "cd func_tests && npx playwright test --headed",
    "e2e:debug": "cd func_tests && npx playwright test --debug",
    "e2e:chrome": "cd func_tests && npx playwright test --project=chromium",
    "ports:kill": "bash scripts/kill-ports.sh",
    "ports:kill:sudo": "sudo bash scripts/kill-ports.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "35.7.5",
    "electron-builder": "^24.6.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "globals": "^16.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "msw": "^2.11.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.5",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.44.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.3.6",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.idealgoggles.app",
    "productName": "ideal-goggles",
    "copyright": "Copyright Â© 2023 Ideal Goggles Team",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build-resources"
    },
    "icon": "frontend/public/icon.png",
    "files": [
      "frontend/dist/**/*",
      "frontend/electron/dist/**/*",
      "!frontend/src/**/*",
      "!backend/**/*",
      "!*.ts",
      "!*.tsx"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Ideal Goggles Team",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "signingHashAlgorithms": [],
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.photography",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "identity": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Graphics",
      "executableName": "ideal-goggles",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ideal-goggles",
      "uninstallDisplayName": "ideal-goggles"
    },
    "dmg": {
      "title": "ideal-goggles",
      "iconSize": 100,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "packageCategory": "graphics",
      "synopsis": "Ideal Goggles desktop application",
      "description": "Privacy-focused local photo search and organization with AI capabilities.",
      "maintainer": "Ideal Goggles Team"
    },
    "publish": null
  },
  "packageManager": "pnpm@10.17.1"
}
