{
  "name": "tests",
  "version": "1.0.13",
  "description": "Playwright integration tests for Ideal Goggles",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test 01-smoke",
    "test:search": "playwright test 02-search",
    "test:settings": "playwright test 03-settings",
    "test:people": "playwright test 04-people",
    "test:workflows": "playwright test 05-workflows",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:report": "playwright show-report",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "install": "playwright install",
    "install:deps": "playwright install-deps",
    "codegen": "playwright codegen http://localhost:3000",
    "trace": "playwright show-trace"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
