{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
  "outDir": "dist",
  "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["main.ts", "preload.ts", "updater.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
